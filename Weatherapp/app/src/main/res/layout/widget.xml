<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/icon_wid"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/temp_wid"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon_wid"
        android:layout_marginTop="1dp"
        android:gravity="center|center_vertical"
        android:text="29.0°"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/feelliketemp_wid"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/temp_wid"
        android:gravity="center"
        android:text="như xyz độ"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/des_wid"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feelliketemp_wid"
        android:layout_marginTop="0dp"
        android:gravity="center|center_vertical"
        android:text="Bấu trời quang đãng"
        android:textSize="16dp" />
</RelativeLayout>